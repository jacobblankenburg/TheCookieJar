@model TheCookieJar.Models.CookieSurvey

@{
    ViewBag.Title = "Create";
}

<h2>Survey</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Survey</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <h3>1. When eating your favorite cookie you feel_____?</h3>
            <div class="col-md-10">
                @{var listItems1 = new List<SelectListItem>
                               ()
               {
               new SelectListItem {Text = "Relaxed",   Value = "1"},
               new SelectListItem {Text = "Indulgent", Value = "2"},
               new SelectListItem {Text = "Like a Kid again", Value = "3"}
               };

                    @Html.DropDownListFor(m => m.Question1, listItems1)
                }
            </div>
        </div>

        <div class="form-group">
            <h3>2. What type of cookie do you enjoy____?</h3>
            <div class="col-md-10">
                @{var listItems2 = new List<SelectListItem>
                               ()
               {
                new SelectListItem {Text = "Light and Flakey",   Value = "1"},
              new SelectListItem {Text = "Lots of Chocolate", Value = "2"},
              new SelectListItem {Text = "Soft and Chewy", Value = "3" }
               };

                    @Html.DropDownListFor(m => m.Question2, listItems2)
                }
            </div>
        </div>

        <div class="form-group">
            <h3>3. On a rainy day what do you like to do____</h3>
            <div class="col-md-10">
                @{var listItems3 = new List<SelectListItem>

               {
                new SelectListItem {Text = "Reading a book",   Value = "1"},
              new SelectListItem {Text = "Museum", Value = "2"},
              new SelectListItem {Text = "Playing games", Value = "3" }};
                

                @Html.DropDownListFor(m => m.Question3, listItems3)
                }

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
                @*//onclick="window.location.href='@Url.Action("ProfileView")'"*@
            </div>
        </div>
    </div>
                    }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}